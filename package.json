{
  "name": "abb-platform",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "web": "react-app-rewired start",
    "build": "react-app-rewired build",
    "ios": "react-native run-ios",
    "android": "react-native run-android",
    "test": "jest --coverage",
    "watch": "jest --watch",
    "lint": "tsc && tslint --fix -p tsconfig.json -c tslint.json"
  },
  "dependencies": {
    "native-base": "^2.12.1",
    "react": "16.8.6",
    "react-dom": "16.8.6",
    "react-native": "^0.59.5",
    "react-native-vector-icons": "^6.4.2",
    "react-native-web": "0.11.2",
    "react-router": "^5.0.0",
    "react-router-config": "^5.0.0",
    "react-router-native": "^5.0.0",
    "react-scripts": "2.1.8"
  },
  "devDependencies": {
    "@babel/plugin-proposal-class-properties": "^7.4.0",
    "@types/jest": "24.0.11",
    "@types/react": "16.8.10",
    "@types/react-native": "^0.57.45",
    "@types/react-native-vector-icons": "^6.4.0",
    "@types/react-router": "^4.4.5",
    "@types/react-router-config": "^1.1.3",
    "@types/react-router-native": "^4.2.4",
    "@types/react-test-renderer": "16.8.1",
    "babel-jest": "23.6.0",
    "customize-cra": "^0.2.12",
    "jest": "23.6.0",
    "prettier": "1.16.4",
    "react-app-rewired": "^2.1.1",
    "react-art": "16.8.6",
    "react-test-renderer": "16.8.6",
    "ts-jest": "24.0.1",
    "tslint": "5.15.0",
    "tslint-config-prettier": "1.18.0",
    "typescript": "3.4.1",
    "url-loader": "^1.1.2"
  },
  "babel": {
    "presets": [
      "module:metro-react-native-babel-preset"
    ]
  },
  "jest": {
    "preset": "react-native",
    "transform": {
      "^.+\\.(jsx?)$": "<rootDir>/node_modules/react-native/jest/preprocessor.js",
      "^.+\\.tsx?$": "ts-jest"
    },
    "transformIgnorePatterns": [
      "node_modules/(?!react-native|react-router-native)/"
    ],
    "globals": {
      "window": true,
      "ts-jest": {
        "tsConfig": "./tsconfig.jest.json"
      }
    }
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ]
}
